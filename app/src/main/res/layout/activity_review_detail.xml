<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    android:id="@+id/drawer_menu"
    tools:context=".ReviewDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReviewDetailActivity">


        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/tvRVDA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:text="위치"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDName" />

                <TextView
                    android:id="@+id/tvRVDP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="번호"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDA" />

                <TextView
                    android:id="@+id/tvRVDD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="날짜"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDImage" />

                <TextView
                    android:id="@+id/tvRVDDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:hint="YYYYMMDD"
                    android:inputType="date"
                    app:layout_constraintStart_toEndOf="@+id/tvRVDD"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDImage"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvRVDC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="내용"
                    android:textSize="16sp"
                    android:fontFamily="@font/gowunbatang_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDP" />

                <TextView
                    android:id="@+id/tvRVDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="사진"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDContents" />

                <TextView
                    android:id="@+id/tvRVDAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:text="Address"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/tvRVDA"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDName" />

                <TextView
                    android:id="@+id/tvRVDPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:text="Phone"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/tvRVDP"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDAddress" />

                <TextView
                    android:id="@+id/tvRVDContents"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:scrollHorizontally="false"
                    android:padding="1dp"
                    android:text="Review Contents"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/tvRVDC"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDPhone" />

                <TextView
                    android:id="@+id/tvRVDName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:shadowColor="#000000"
                    android:text="PlaceName"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/tvRVDImage"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDContents"
                    tools:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tvRVDRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="평점"
                    android:fontFamily="@font/gowunbatang_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRVDDate" />

                <RatingBar
                    android:id="@+id/etRVDRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:isIndicator="true"
                    android:progressTint="#FFEB3B"
                    app:layout_constraintStart_toEndOf="@+id/tvRVDRating"
                    app:layout_constraintTop_toTopOf="@+id/tvRVDRating" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnGoUpdate"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/purple_300"
            android:onClick="onClick"
            android:text="리뷰 수정하기"
            android:fontFamily="@font/gowunbatang_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

        <Button
            android:id="@+id/btnDetailBack"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/purple_300"
            android:onClick="onClick"
            android:text="리뷰 목록으로"
            android:fontFamily="@font/gowunbatang_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>